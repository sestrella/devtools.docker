#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset

git_clone() {
  if [ -d $2 ]; then
    echo "$2 already exists"
  else
    echo "Installing $2"
    git clone $1 $2
  fi
}

asdf_add_plugin() {
  asdf plugin add "$1" || echo "$1 already exists"
}

git_clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

brew install asdf

asdf_add_plugin nodejs
asdf_add_plugin python
asdf_add_plugin ruby
